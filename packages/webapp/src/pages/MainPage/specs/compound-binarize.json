{
	"name": "Compound: Binarize",
	"description": "Use a compound binarize step to produce a final output without showing every step.",
	"steps": [
		{
			"type": "compound",
			"verb": "multi-binarize",
			"input": "data/companies.csv",
			"output": "compound-binarize-1",
			"args": {
				"steps": [
					{
						"verb": "chain",
						"input": "data/companies.csv",
						"output": "collector-1",
						"args": {
							"steps": [
								{
									"type": "verb",
									"verb": "binarize",
									"input": "data/companies.csv",
									"output": "collector-1",
									"args": {
										"column": "Employees",
										"operator": "<",
										"value": 150000,
										"type": "value",
										"to": "Smallest"
									}
								},
								{
									"type": "verb",
									"verb": "binarize",
									"input": "collector-1",
									"output": "collector-1",
									"args": {
										"column": "Employees",
										"operator": ">",
										"value": 200000,
										"type": "value",
										"to": "Largest"
									}
								}
							]
						}
					},
					{
						"verb": "chain",
						"input": "collector-1",
						"output": "collector-1",
						"args": {
							"steps": [
								{
									"type": "verb",
									"verb": "derive",
									"input": "collector-1",
									"output": "collector-1",
									"args": {
										"column1": "Smallest",
										"column2": "Largest",
										"operator": "+",
										"to": "Combined"
									}
								}
							]
						}
					},
					{
						"type": "verb",
						"verb": "binarize",
						"input": "collector-1",
						"output": "collector-1",
						"args": {
							"column": "Combined",
							"operator": ">",
							"value": 0,
							"type": "value",
							"to": "Smallest & Largest"
						}
					},
					{
						"type": "verb",
						"verb": "lookup",
						"input": "data/companies.csv",
						"output": "compound-binarize-1",
						"args": {
							"other": "collector-1",
							"on": ["Employees"],
							"columns": ["Smallest & Largest"]
						}
					}
				]
			}
		}
	]
}
