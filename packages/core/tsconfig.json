{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext", "ES2020.BigInt"],
		"outDir": "lib",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"declaration": true,
		"noImplicitAny": true,
		"target": "ESNext",
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"isolatedModules": true
	},
	"include": ["src/**/*"]
}