{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "docs/**"]
		},
		"test": {
			"dependsOn": [],
			"outputs": []
		},
		"lint": {
			"dependsOn": [],
			"outputs": []
		},
		"bundle": {
			"dependsOn": ["^build"],
			"outputs": ["build/**", "storybook-static/**"]
		},
		"ci": {
			"dependsOn": ["build", "lint", "test", "bundle"]
		},
		"clean": {
			"cache": false
		},
		"release": {
			"cache": false
		},
		"start": {
			"cache": false
		},
		"deploy": {
			"cache": false
		}
	}
}
