{
	"files": {
		"ignore": [
			"dist",
			"lib",
			"build",
			"python",
			"docs",
			"storybook-static",
			".turbo",
			".pnp.cjs",
			".pnp.loader.mjs",
			"javascript/schema/versions.js",
			".devcontainer",
			"javascript/schema/versions.d.ts"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noShadowRestrictedNames": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "all",
			"quoteProperties": "asNeeded"
		}
	},
	"formatter": {
		"indentStyle": "tab"
	}
}
