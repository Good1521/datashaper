{
	"$schema": "../../../../../../schema/workflow.json",
	"name": "Sparkbar",
	"description": "Aggregates daily data to weekly averages to demonstrate automatic Sparkbars.",
	"steps": [
		{
			"id": "n1",
			"verb": "derive",
			"inputs": { "source": { "node": "data/stocks.csv" } },
			"outputs": { "target": "output-table-0" },
			"args": {
				"to": "Week Key",
				"column1": "Symbol",
				"operator": "+",
				"column2": "Week"
			}
		},
		{
			"id": "n2",
			"verb": "aggregate",
			"inputs": { "source": { "node": "output-table-0" } },
			"outputs": { "target": "output-table-1" },
			"args": {
				"to": "Week Average",
				"groupby": "Week Key",
				"column": "Close",
				"operation": "mean"
			}
		},
		{
			"id": "n3",
			"verb": "lookup",
			"inputs": { "source": { "node": "output-table-1" } },
			"outputs": { "target": "output-table-2" },
			"args": {
				"columns": ["Symbol"],
				"other": "output-table-0",
				"on": ["Week Key"]
			}
		},
		{
			"id": "n4",
			"verb": "aggregate",
			"inputs": { "source": { "node": "output-table-2" } },
			"outputs": { "target": "output-table-3" },
			"args": {
				"to": "Monthly List",
				"groupby": "Symbol",
				"column": "Week Average",
				"operation": "array_agg"
			}
		}
	]
}
