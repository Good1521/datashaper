{
	"name": "Dropdown",
	"description": "Aggregates daily data to monthly averages to demonstrate automatic Dropdowns.",
	"steps": [
		{
			"verb": "derive",
			"inputs": { "default": { "node": "data/stocks.csv" } },
			"output": "output-table-0",
			"args": {
				"to": "Month Key",
				"column1": "Symbol",
				"operator": "+",
				"column2": "Month"
			}
		},
		{
			"verb": "aggregate",
			"input": "output-table-0",
			"output": "output-table-1",
			"args": {
				"to": "Monthly Average",
				"groupby": "Month Key",
				"column": "Close",
				"operation": "mean"
			}
		},
		{
			"verb": "lookup",
			"input": "output-table-1",
			"output": "output-table-2",
			"args": {
				"columns": ["Symbol"],
				"other": "output-table-0",
				"on": ["Month Key"]
			}
		},
		{
			"verb": "aggregate",
			"input": "output-table-2",
			"output": "output-table-3",
			"args": {
				"to": "Monthly List",
				"groupby": "Symbol",
				"column": "Monthly Average",
				"operation": "array_agg"
			}
		}
	]
}
