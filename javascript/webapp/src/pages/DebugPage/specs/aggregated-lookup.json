{
	"$schema": "../../../../../../schema/workflow.json",
	"name": "Aggregated lookup",
	"description": "Uses a multi-step aggregate and filter to do a custom lookup.",
	"steps": [
		{
			"verb": "join",
			"inputs": {
				"default": "data/companies.csv",
				"other": "data/products.csv"
			},
			"outputs": "join-1",
			"args": {
				"on": ["ID"]
			}
		},
		{
			"verb": "filter",
			"inputs": "join-1",
			"outputs": "filter-1",
			"args": {
				"column": "FY21 Sales",
				"criteria": [
					{
						"value": 10000,
						"operator": ">=",
						"type": "value"
					}
				]
			}
		},
		{
			"verb": "aggregate",
			"inputs": "filter-1",
			"outputs": "aggregate-1",
			"args": {
				"groupby": "ID",
				"column": "FY21 Sales",
				"operation": "sum",
				"to": "Total sales >= 10k"
			}
		},
		{
			"verb": "lookup",
			"inputs": {
				"default": "data/companies.csv",
				"other": "aggregate-1"
			},
			"outputs": "lookup-1",
			"args": {
				"on": ["ID"],
				"columns": ["Total sales >= 10k"]
			}
		}
	]
}
