{
	"$schema": "../../../../../../schema/workflow.json",
	"name": "Every operation",
	"description": "Chains every available operation together for an easy look at all UX and output examples",
	"steps": [
		{
			"verb": "aggregate",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "aggregate-1" },
			"args": {
				"groupby": "ID",
				"column": "FY21 Sales",
				"operation": "sum",
				"to": "Total sales"
			}
		},
		{
			"verb": "aggregate",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "aggregate-2" },
			"args": {
				"groupby": "ID",
				"column": "Product",
				"operation": "array_agg",
				"to": "Product List"
			}
		},
		{
			"verb": "bin",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "bin-1" },
			"args": {
				"column": "FY21 Sales",
				"strategy": "auto",
				"to": "Binned"
			}
		},
		{
			"verb": "binarize",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "binarize-1" },
			"args": {
				"column": "FY21 Sales",
				"to": "FY21 Sales < 10k",
				"criteria": [
					{
						"operator": "<",
						"value": 10000
					}
				],
				"logical": "or"
			}
		},
		{
			"verb": "boolean",
			"inputs": { "source": { "node": "data/companies2.csv" } },
			"outputs": { "target": "boolean-1" },
			"args": {
				"columns": ["Name", "US"],
				"operator": "and",
				"to": "Name & US"
			}
		},
		{
			"verb": "concat",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "concat-1" },
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "convert",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "convert-1" },
			"args": {
				"columns": ["ID"],
				"type": "int"
			}
		},
		{
			"verb": "dedupe",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "dedupe-1" },
			"args": {
				"columns": ["ID"]
			}
		},
		{
			"verb": "derive",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "derive-1" },
			"args": {
				"column1": "FY20 Sales",
				"operator": "+",
				"column2": "FY21 Sales",
				"to": "Combined Sales"
			}
		},
		{
			"verb": "difference",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "difference-1" },
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "erase",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "erase-1" },
			"args": {
				"value": 9000,
				"columns": ["FY20 Sales", "FY21 Sales"]
			}
		},
		{
			"verb": "fetch",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "fetch-1" },
			"args": {
				"url": "https://vega.github.io/vega/data/seattle-weather-hourly-normals.csv"
			}
		},
		{
			"verb": "fill",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "fill-1" },
			"args": {
				"value": 1,
				"to": "New Column"
			}
		},
		{
			"verb": "filter",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "filter-1" },
			"args": {
				"column": "Employees",
				"criteria": [
					{
						"operator": "<=",
						"value": 300000
					}
				],
				"logical": "or"
			}
		},
		{
			"verb": "fold",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "fold-1" },
			"args": {
				"columns": ["Name", "Employees"],
				"to": ["key", "value"]
			}
		},
		{
			"verb": "groupby",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "groupby-1" },
			"args": {
				"columns": ["ID"]
			}
		},
		{
			"verb": "impute",
			"inputs": "data/companies2.csv",
			"outputs": { "target": "impute-1" },
			"args": {
				"columns": ["Name"],
				"value": "emptyValue"
			}
		},
		{
			"verb": "intersect",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "intersect-1" },
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "join",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "join-1" },
			"args": {
				"other": "data/products.csv",
				"on": ["ID", "ID"]
			}
		},
		{
			"verb": "lookup",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "lookup-1" },
			"args": {
				"other": "data/products.csv",
				"on": ["ID", "ID"],
				"columns": ["Product"]
			}
		},
		{
			"verb": "merge",
			"inputs": { "source": { "node": "data/products.csv" } },
			"outputs": { "target": "merge-1" },
			"args": {
				"strategy": "concat",
				"to": "result",
				"columns": ["FY20 Sales", "FY21 Sales"]
			}
		},
		{
			"verb": "pivot",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "pivot-1" },
			"args": {
				"key": "ID",
				"value": "Name",
				"operation": "any"
			}
		},
		{
			"verb": "onehot",
			"input": "data/stocks.csv",
			"output": "onehot-1",
			"args": {
				"column": "Symbol",
				"prefix": "ticker-"
			}
		},
		{
			"verb": "orderby",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "orderby-1" },
			"args": {
				"orders": [
					{
						"column": "Employees",
						"direction": "asc"
					}
				]
			}
		},
		{
			"verb": "recode",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "recode-1" },
			"args": {
				"column": "ID",
				"to": "Greetings",
				"map": {
					"1": "Hello",
					"2": "Hola",
					"3": "Aloha",
					"4": "Yo",
					"5": "G'day"
				}
			}
		},
		{
			"verb": "rename",
			"inputs": "data/stocks.csv",
			"outputs": { "target": "rename-1" },
			"args": {
				"columns": {
					"Symbol": "symbol",
					"Date": "date",
					"Close": "close",
					"Volume": "volume",
					"Open": "open",
					"High": "high",
					"Low": "low"
				}
			}
		},
		{
			"verb": "rollup",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "rollup-1" },
			"args": {
				"to": "count",
				"column": "Product",
				"operation": "count"
			}
		},
		{
			"verb": "sample",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "sample-1" },
			"args": {
				"size": 2
			}
		},
		{
			"verb": "select",
			"inputs": "data/stocks.csv",
			"outputs": { "target": "select-1" },
			"args": {
				"columns": ["Symbol", "Date", "Close", "Volume", "Open", "High", "Low"]
			}
		},
		{
			"verb": "spread",
			"inputs": "aggregate-2",
			"outputs": { "target": "spread-1" },
			"args": {
				"column": "Product List"
			}
		},
		{
			"verb": "unfold",
			"inputs": "fold-1",
			"outputs": { "target": "unfold-1" },
			"args": {
				"key": "key",
				"value": "value"
			}
		},
		{
			"verb": "ungroup",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "ungroup-1" },
			"args": {
				"columns": ["Name", "Employees"]
			}
		},
		{
			"verb": "union",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "union-1" },
			"args": {
				"others": ["data/companies2.csv"]
			}
		},
		{
			"verb": "unorder",
			"inputs": { "source": { "node": "data/companies.csv" } },
			"outputs": { "target": "unorder-1" },
			"args": {
				"orders": [{ "column": "Name", "direction": "asc" }]
			}
		},
		{
			"verb": "unroll",
			"inputs": "aggregate-2",
			"outputs": { "target": "unroll-1" },
			"args": {
				"columns": ["Product List"]
			}
		},
		{
			"verb": "window",
			"inputs": "groupby-1",
			"outputs": { "target": "window-1" },
			"args": {
				"to": "First Product",
				"column": "Product",
				"operation": "first_value"
			}
		}
	]
}
