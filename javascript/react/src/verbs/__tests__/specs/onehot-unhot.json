{
	"$schema": "../../../../../../schema/workflow.json",
	"name": "Onehot-unhot",
	"description": "Performs a onehot then unhot to demonstrate reversing the encoding.",
	"steps": [
		{
			"id": "onehot",
			"verb": "onehot",
			"input": { "source": "companies2" },
			"args": {
				"columns": ["Name"]
			}
		},
		{
			"id": "unhot",
			"verb": "unhot",
			"input": { "source": "onehot" },
			"args": {
				"columns": ["Microsoft", "Nokia"]
			}
		}
	],
	"input": ["companies2"],
	"output": ["onehot", "unhot"]
}
