{
	"$schema": "../../../../../../schema/workflow.json",
	"name": "Spread with onehot",
	"description": "Demonstrates the spread verb with a onehot flag to encode as binary columns.",
	"steps": [
		{
			"id": "spreadhot",
			"verb": "spread",
			"input": { "source": "companies2" },
			"args": {
				"columns": ["Array"],
				"delimiter": ";",
				"onehot": true
			}
		}
	],
	"input": ["companies2"],
	"output": ["spreadhot"]
}
