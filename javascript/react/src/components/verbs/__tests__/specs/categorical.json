{
	"$schema": "../../../../../../../schema/workflow.json",
	"name": "Sparkbar: Categorical",
	"description": "Aggregates months into an array to demonstrate categorical Sparkbar cells",
	"steps": [
		{
			"id": "categorical",
			"verb": "aggregate",
			"input": {
				"source": "stocks"
			},
			"args": {
				"groupby": "Symbol",
				"column": "Month",
				"operation": "array_agg",
				"to": "Categories"
			}
		}
	],
	"input": ["stocks"],
	"output": ["categorical"]
}
